{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
